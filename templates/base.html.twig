<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
        and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
      {{ encore_entry_link_tags('global') }}
    {% endblock %}
  </head>
  <body>
      {% block header %}
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a href="{{ path('home') }}" class="navbar-brand">Lopi tests</a>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Bundles
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <li><a class="dropdown-item" href="{{ path('gedmo') }}">Gedmo</a></li>
                  <li><a class="dropdown-item" href="{{ path('knplabs_doctrine_behaviors') }}">Knplabs - Doctrine Behaviors</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      {% for label, messages in app.flashes %}
        {% for message in messages %}
      <div class="alert alert-dismissible fade show alert-{{ label }}" role="alert">
        {{ message|raw }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
        {% endfor %}
      {% endfor %}
      {% endblock %}
      {% block body %}{% endblock %}
      {% block javascripts %}
        {{ encore_entry_script_tags('global') }}
      {% endblock %}
  </body>
</html>
